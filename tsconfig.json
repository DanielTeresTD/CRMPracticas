{
    "compilerOptions": {
        "target": "esnext", // Version ts used when compiled
        "module": "nodenext", // Indicate how to import/export modules
        "moduleResolution": "nodenext", // Tell TS how to search imported modules.
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true, // Generate map files to allow debug js files that were originally .ts
    }
}